{
  "name": "node-leap",
  "version": "0.0.0",
  "description": "Node Leap is a node boilerplate that follows best practicles of software design and agile",
  "main": "dist/main/server.js",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "build:prod": "tsc -p tsconfig-build.json",
    "start": "node dist/main/server.js",
    "start:dev": "npm run prisma:migration:push && npx nodemon --exec 'npm run build && node dist/main/server.js' --watch src -e ts",
    "start:prod": "npm run prisma:migration:push && npm start",
    "lint": "eslint 'src/**' '__tests__/**'",
    "lint:fix": "eslint 'src/**' '__tests__/**' --fix",
    "style:check": "prettier --check 'src/**/*.ts' '__tests__/**/*.ts'",
    "style:fix": "prettier --write 'src/**/*.ts' '__tests__/**/*.ts'",
    "test": "jest --passWithNoTests --noStackTrace --runInBand --no-cache",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:integration": "npm test -- --watch -c jest-integration-config.js --verbose",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage",
    "prisma:generate": "npx prisma generate --schema=./src/infra/databases/postgres/prisma/schema.prisma",
    "prisma:migration": "npx prisma migrate dev --schema=./src/infra/databases/postgres/prisma/schema.prisma --name",
    "prisma:migration:push": "npx prisma migrate deploy --schema=./src/infra/databases/postgres/prisma/schema.prisma",
    "prisma:introspect": "npx prisma introspect --force --schema=./src/infra/databases/postgres/prisma/schema.prisma && npm run prisma:generate",
    "prisma:push": "npx prisma db push --schema=./src/infra/databases/postgres/prisma/schema.prisma --accept-data-loss",
    "prepare": "husky install",
    "plop": "plop"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/loomi/node-leap.git"
  },
  "author": "itd@cin.ufpe.br",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/loomi/node-leap/issues"
  },
  "homepage": "https://github.com/loomi/node-leap#readme",
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/pino": "^6.3.12",
    "@types/pino-http": "^5.8.0",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^8.3.1",
    "@types/validator": "^13.6.6",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "faker": "^5.5.3",
    "git-commit-msg-linter": "^3.2.8",
    "husky": "^7.0.0",
    "jest": "^27.3.1",
    "lint-staged": "^11.2.3",
    "nodemon": "^2.0.14",
    "pino-pretty": "^7.2.0",
    "plop": "^2.7.6",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@prisma/client": "^3.3.0",
    "@sentry/node": "^6.14.0",
    "@sentry/tracing": "^6.14.0",
    "aws-sdk": "^2.1023.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "module-alias": "^2.2.2",
    "pino": "^7.1.0",
    "pino-http": "^6.0.0",
    "prisma": "^3.4.1",
    "swagger-ui-express": "^4.1.6",
    "uuid": "^8.3.2",
    "validator": "^13.7.0"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
